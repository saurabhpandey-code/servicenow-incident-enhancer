        return;
    }

    var category = g_form.getValue('category');
    var subcategory = g_form.getValue('subcategory');

    if (!category) {
        g_form.addInfoMessage('Please select a Category first.');
        return;
    }

    var description = 'This incident is related to ' + category;
    if (subcategory) {
