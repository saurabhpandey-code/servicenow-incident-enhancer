        <script><![CDATA[function onClickAI() {
    // Get the current Impact value from the form (returns a string like '1', '2', etc.)
    var impact = g_form.getValue('impact');

    // Read the existing Priority as a baseline; we'll update it only for matching impacts
    var newPriority = g_form.getValue('priority');

    // Map Impact to Priority as requested:
    // Impact 1 -> Priority 1
    // Impact 2 -> Priority 2
    if (impact === '1') {
        newPriority = '1';
        g_form.setValue('priority', newPriority); // Update Priority to 1 when Impact is 1
    } else if (impact === '2') {
        newPriority = '2';
        g_form.setValue('priority', newPriority); // Update Priority to 2 when Impact is 2
    } else {
        // For any other Impact value, leave Priority unchanged
    }

    // Notify the user of the resulting Priority value
    alert('Priority is now set to: ' + newPriority);
}
